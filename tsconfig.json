{
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
, "app/routes/$catchall.jsx", "app/routes/admin.dashboard._index.jsx", "app/routes/admin.settings.jsx", "app/routes/admin.user1.jsx", "app/routes/admin.user2.jsx", "app/routes/admin.user31.jsx", "app/routes/admin.user32.jsx", "app/routes/admin.users.jsx", "app/routes/Login.jsx", "app/routes/profile.jsx", "app/routes/station.dashboard._index.jsx", "app/routes/station.reports.jsx", "app/routes/warehouse.dashboard._index.jsx", "app/routes/warehouse.inventory._index.jsx", "app/components/StationMenu.jsx", "app/components/WarehouseMenu.jsx", "app/components/Layout.jsx"  ],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": ["@remix-run/node", "vite/client"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },

    // Vite takes care of building everything, not tsc.
    "noEmit": true
  }
}
